
<div style="margin-top:5%; text-align: center;">
  <h1>New Vet Officer</h1>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

		<center><%= form_for @vet_officer do |f| %>
		 <% if @success %>
		 	<div class="success"><%= @success %></div>

		 	<% else %>

		 	<div class="danger"><%= @error %></div>
		 <% end %>
			<div>
				<label>Vet Officer Name</label>
				  <%= f.text_field :name , class: 'form-control'%>
			</div>

			<div>
				<label>Office Location</label>
				  <%= f.text_field :location , class: 'form-control'%>

			</div>
			<div>
				<label>Phone Number</label>

				  <%= f.text_field :phone_number , class: 'form-control'%>

			</div>
			<div>

				<label>Office Address</label>
				  <%= f.text_field :address, class: 'form-control' %>

			</div>
			<div>
				<label>Profile Picture</label>
				  <%= f.file_field :vprofile_pic , class: 'form-control'%>

			</div>

			<div>
				  <%= f.submit "Add New Vet.Officer", class: "btn btn-warning form-control " %>

			</div>
		<% end %></center>
	</div>
</div>
