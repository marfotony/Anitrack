<!--Form for farmers-->

<div class="row">
  <div class="col-md-6 col-md-offset-3">

	<center><%= form_for(@farmer) do |f| %>
	 <% if @success %>
	 	<div class="success"><%= @success %></div>

	 	<% else %>

	 	<div class="danger"><%= @error %></div>
	 <% end %>
		<div>
			<label>Farmer Name</label>
			  <%= f.text_field :name , class: 'form-control' %>
		</div>

		<div>
			<label>Farm Size</label>
			  <%= f.text_field :farm_size , class: 'form-control' %>

		</div>
		<div>
			<label>Number of Animals</label>

			  <%= f.text_field :number_of_animals , class: 'form-control' %>

		</div>
		<div>
			
			<label>Location of Farm</label>
			  <%= f.text_field :farm_location , class: 'form-control'%>

		</div>
		<div>
			<label>Primary Phone Number</label>
			  <%= f.text_field :phone_number , class: 'form-control' %>

		</div>
		<div>
			
			<label>Address if any</label>
			  <%= f.text_field :address , class: 'form-control'%>

		</div>
		<div>
			<label>Profile Picture</label>
			  <%= f.file_field :profile_pic , class: 'form-control'%>

		</div>
		<div>
			  <%= f.submit "Add New Farmer", class: "btn btn-warning form-control"  %>
		</div>
	<% end %></center>
  </div>
</div>