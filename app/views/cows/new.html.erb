<div class="row">
  <div class="col-md-6 col-md-offset-3">

		<%= form_for @cow do |f| %>
		 <% if @success %>
		 	<div class="success"><%= @success %></div>

		 	<% else %>

		 	<div class="danger"><%= @error %></div>
		 <% end %>


		<div>


		 <label>  Cow Owner </label>


		       <%= f.select(:farmer_id, options_for_select(@farmer_options),{}, class: 'form-control' ) %>

			</div>

		  <div>
			<label> Vet Officer </label>



		     <%= f.select(:VetOfficer_id, options_for_select(@vet_officer_options),{},class: 'form-control' )%>


			</div>
			<div>
				<label>Date of Birth</label>
				  <%= f.text_field :date_of_birth ,class: 'form-control' %>

			</div>
			<div>
				<label>Initial Weight</label>

				  <%= f.text_field :weight,class: 'form-control'  %>

			</div>
			<div>

				<label>Color of Cow</label>
				  <%= f.text_field :color,class: 'form-control'  %>

			</div>
			<div>
				<label>Tag Number</label>
				  <%= f.text_field :tag_number ,class: 'form-control' %>

			</div>
			<div>

				<label>Initial Temperature</label>
				  <%= f.text_field :temperature ,class: 'form-control' %>

			</div>
			<div>
				<label>Status</label>
				  <%= f.select :status, generate_status, {},class: 'form-control'  %>

			</div><br>
			<div>
				  <%= f.submit "Add Cow", class: "btn btn-warning"  %>

			</div>
		<% end %>
	</div>
</div>